{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@features/*": ["features/*"],
      "@fixtures/*": ["fixtures/*"],
      "@page-objects/*": ["page-objects/*"],
      "@helpers/*": ["helpers/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
